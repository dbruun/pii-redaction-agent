@page
@model PiiRedactionWebApp.Pages.UploadModel
@{
    ViewData["Title"] = "PII Redaction";
}

<div class="container mt-4">
    <h1 class="mb-4">PII Redaction Agent</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Upload Document for PII Redaction</h5>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="documentFile" class="form-label">Upload Document</label>
                    <input class="form-control" type="file" id="documentFile" name="documentFile" accept=".txt,.doc,.docx,.pdf" />
                    <div class="form-text">Supported formats: TXT, DOC, DOCX, PDF (Note: PDF support is basic)</div>
                </div>
                
                <div class="mb-3">
                    <label for="textInput" class="form-label">Or paste text directly:</label>
                    <textarea class="form-control" id="textInput" name="textInput" rows="5" placeholder="Enter or paste text containing PII here..."></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-shield-check"></i> Redact PII
                </button>
            </form>
        </div>
    </div>

    @if (Model.RedactionResult != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-check-circle"></i> Redaction Complete
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <strong>Detected @Model.RedactionResult.DetectedEntities.Count PII entities</strong>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h6>Original Text:</h6>
                        <div class="border rounded p-3 bg-light" style="max-height: 400px; overflow-y: auto;">
                            <pre class="mb-0">@Model.RedactionResult.OriginalText</pre>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Redacted Text:</h6>
                        <div class="border rounded p-3 bg-light" style="max-height: 400px; overflow-y: auto;">
                            <pre class="mb-0">@Model.RedactionResult.RedactedText</pre>
                        </div>
                    </div>
                </div>

                @if (Model.RedactionResult.DetectedEntities.Any())
                {
                    <div class="mt-4">
                        <h6>Detected PII Entities:</h6>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Value</th>
                                        <th>Position</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entity in Model.RedactionResult.DetectedEntities)
                                    {
                                        <tr>
                                            <td><span class="badge bg-primary">@entity.Type</span></td>
                                            <td><code>@entity.Value</code></td>
                                            <td><small class="text-muted">@entity.StartIndex - @entity.EndIndex</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <div class="mt-3">
                    <form method="post" asp-page-handler="Download">
                        <input type="hidden" name="redactedText" value="@Model.RedactionResult.RedactedText" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-download"></i> Download Redacted Document
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
