@page
@model PiiRedactionWebApp.Pages.UploadModel
@{
    ViewData["Title"] = "PII Redaction";
}

<div class="container mt-4">
    <h1 class="mb-4">PII Redaction Agent</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                Upload Document for PII Redaction
                <span class="badge bg-success ms-2">Native Document API</span>
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info mb-3">
                <i class="bi bi-info-circle"></i> <strong>Native Document PII API</strong> - Documents are processed with formatting preserved using Azure AI Language and Blob Storage.
            </div>
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="documentFile" class="form-label">Upload Document</label>
                    <input class="form-control" type="file" id="documentFile" name="documentFile" accept=".txt,.docx,.pdf" required />
                    <div class="form-text">Supported formats: TXT, DOCX, PDF (Max: 10MB)</div>
                </div>
                
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-shield-check"></i> Redact PII
                </button>
            </form>
        </div>
    </div>

    @if (Model.DocumentResult != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-check-circle"></i> Redaction Complete
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <div class="row">
                        <div class="col-md-8">
                            <strong>Document:</strong> @Model.DocumentResult.OriginalFileName<br />
                            <strong>Type:</strong> @Model.DocumentResult.FileExtension.ToUpper()<br />
                            <strong>Size:</strong> @((Model.DocumentResult.FileSizeBytes / 1024.0).ToString("F2")) KB<br />
                            <strong>Detected PII Entities:</strong> @Model.DocumentResult.DetectedEntities.Count
                        </div>
                        <div class="col-md-4 text-end">
                            <small class="text-muted">Processed: @Model.DocumentResult.ProcessedAt.ToString("yyyy-MM-dd HH:mm:ss") UTC</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h6>Original Document Text:</h6>
                        <div class="border rounded p-3 bg-light" style="max-height: 500px; overflow-y: auto;">
                            <pre class="mb-0" style="white-space: pre-wrap; word-wrap: break-word;">@Model.DocumentResult.OriginalText</pre>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Redacted Document Text:</h6>
                        <div class="border rounded p-3 bg-warning bg-opacity-10" style="max-height: 500px; overflow-y: auto;">
                            <pre class="mb-0" style="white-space: pre-wrap; word-wrap: break-word;">@Model.DocumentResult.RedactedText</pre>
                        </div>
                    </div>
                </div>

                @if (Model.DocumentResult.DetectedEntities.Any())
                {
                    <div class="mt-4">
                        <h6>Detected PII Entities:</h6>
                        <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-striped table-hover table-sm">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th>Type</th>
                                        <th>Value</th>
                                        <th>Position</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entity in Model.DocumentResult.DetectedEntities)
                                    {
                                        <tr>
                                            <td><span class="badge bg-primary">@entity.Type</span></td>
                                            <td><code>@entity.Value</code></td>
                                            <td><small class="text-muted">@entity.StartIndex - @entity.EndIndex</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <div class="mt-3">
                    <form method="post" asp-page-handler="Download">
                        <input type="hidden" name="originalFileName" value="@Model.DocumentResult.OriginalFileName" />
                        <input type="hidden" name="fileExtension" value="@Model.DocumentResult.FileExtension" />
                        @if (Model.DocumentResult.RedactedDocumentBytes != null)
                        {
                            <input type="hidden" name="redactedDocumentBytesBase64" value="@Convert.ToBase64String(Model.DocumentResult.RedactedDocumentBytes)" />
                        }
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-download"></i> Download Redacted Document
                        </button>
                        <a href="/Upload" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-repeat"></i> Process Another Document
                        </a>
                    </form>
                </div>
            </div>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
